{
  "plugins" : [
    "react"
  ],
  "env": {
    "browser": true,
    // for common JS
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    // enable use of arrow functions
    "arrowFunctions": true,
    // enable let and const
    "blockBindings": true,
    // enable for-of
    "forOf": true,
    // enable JSX
    "jsx": true,
    "classes": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    // enable template strings
    "templateStrings": true,
    "modules": true
  },
  "globals": {
      "React": true,
      "keyMirror": true,
      "appHOC": true
  },
  "rules": {
      // 2 is error 1 is warning
      // brace style is enforced, One True Brace Style
      "brace-style": [2, "1tbs"],
      // camel case is enforced
      "camelcase": 0,
      // space must appear after comma
      "comma-style": [1, "last"],
      // curls have to be used around block statements
      "curly": 2,
      // use the triple compares
      "eqeqeq": 1,
      // 4 spaces indent is enforced
      "indent": [2, 4],

      // allow space before and after colon of object literals, and allow aligning to the colon
      "key-spacing": [1, {
          "align": "colon",
          "beforeColon": true,
          "afterColon": true
      }],

      "new-cap": 0,

      "no-trailing-spaces": 1,
      "no-underscore-dangle": 0,

      // single quotes all the time
      "quotes": [2, "single"],
      "jsx-quotes": 1,

      "react/display-name": 1,
      "react/jsx-boolean-value": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-multi-comp": 1,
      "react/no-unknown-property": 1,
      "react/prop-types": 1,
      "react/react-in-jsx-scope": 1,
      "react/self-closing-comp": 1,
      "react/wrap-multilines": 1,
  }
}
